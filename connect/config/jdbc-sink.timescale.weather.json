{
  "name": "jdbc-sink-timescale-weather",
  "config": {
    "connector.class": "io.confluent.connect.jdbc.JdbcSinkConnector",
    "tasks.max": "1",

    "connection.url":      "${file:/opt/kafka/connect/secrets/secrets.properties:TS_JDBC_URL}",
    "connection.user":     "${file:/opt/kafka/connect/secrets/secrets.properties:TS_USERNAME}",
    "connection.password": "${file:/opt/kafka/connect/secrets/secrets.properties:TS_PASSWORD}",

    "topics": "vlc.weather",

    "auto.create": "false",
    "auto.evolve": "false",
    "insert.mode": "upsert",
    "pk.mode": "record_value",
    "pk.fields": "fiwareid,ts",
    "table.name.format": "weather.hyper",

    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "false",

    "transforms": "tsToTimestamp",
    "transforms.tsToTimestamp.type": "org.apache.kafka.connect.transforms.TimestampConverter$Value",
    "transforms.tsToTimestamp.field": "ts",
    "transforms.tsToTimestamp.target.type": "Timestamp",
    "transforms.tsToTimestamp.format": "yyyy-MM-dd'T'HH:mm:ssX",

    "batch.size": "3000",
    "max.retries": "10",
    "retry.backoff.ms": "2000"
  }
}
